@model Utente
@{
     ViewData["Title"] = "Registrati";
}

<h2>Modulo di prenotazione</h2>
<p>Riempi i seguenti campi e registrati sul nostro sito</p>
<form asp-controller="Home" asp-action="Registrato" method="post">
     <div class="form-group">
          <label asp-for="Nome"></label>
          <input type="text" asp-for="Nome" class="form-control" />
          <span asp-validation-for="Nome" />
     </div>
     <div class="form-group">
          <label asp-for="Cognome"></label>
          <input type="text" asp-for="Cognome" class="form-control" />
          <span asp-validation-for="Cognome" />
     </div>
     <div class="form-group">
          <label asp-for="DataNascita"></label>
          <input type="date" asp-for="DataNascita" class="form-control" />
          <span asp-validation-for="DataNascita" />
     </div>
     <div class="form-group">
          <label asp-for="Email"></label>
          <textarea asp-for="Email" class="form-control"></textarea>
          <span asp-validation-for="Email" />
     </div>
     <div class="form-group">
          <label asp-for="User"></label>
          <input type="password" asp-for="User" class="form-control" />
          <span asp-validation-for="User" />
     </div>
     <div class="form-group">
          <label asp-for="Password"></label>
          <input type="password" asp-for="Password" class="form-control" />
          <span asp-validation-for="Password" />
     </div>
     <div class="form-group">
          <div asp-validation-summary="All"></div>
          <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-send"></i>Registrati</button>
     </div>
</form>
<div class="text-center">
     <h1 class="display-4">Pagina di Registrazione</h1>
</div>